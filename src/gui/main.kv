<View>:
    id: view
    orientation: 'vertical'
    
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.07, 1
        Rectangle:
            pos: self.pos
            size: self.size

    
    ScrollView:
        id: scroll
        do_scroll_x: False
        do_scroll_y: True
        bar_width: 10
        scroll_timeout: 1000
        effect_cls: 'ScrollEffect'
        
        TagTree:
            id: tree
            size_hint_y: None
            hide_root: True
            
<EntNode>:
    cols: 2
    rows: 1
    height: self.minimum_height
    orientation: 'lr-tb'
    color_selected: [0.43, 0.36, 0.33, 1]
    
    even_color: [0.05, 0.05, 0.07, 1]
    odd_color: [0.05, 0.05, 0.07, 1]
            
    Label:
        id: label
        font_size: 15
        size_hint_y: None
        size_hint_x: None
        size: self.texture_size
        padding: (2, 2)

<TagNode>:    
    even_color: [0.11, 0.1, 0.15, 1]
    odd_color: [0.11, 0.1, 0.15, 1]

    TextInput:
        id: input
        multiline: False
        on_text_validate: root.edit_done()
        font_size: 15
        size_hint_y: None
        height: 22
        padding: [2, 2, 2, 2]
        background_color: [0.91, 0.77, 0.66, 1]